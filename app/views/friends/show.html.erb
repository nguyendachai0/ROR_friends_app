
<div class="card">

  <div class="card-body">
    <h2 class="card-title"><%= @friend.first_name + " " + @friend.last_name %></h2>
    <p class="card-text"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
    <div>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-warning mb-1" %> |
    <%= link_to "Back to friends", friends_path, class: "btn btn-info mb-1" %>
  
    <%= button_to "Delete", @friend, method: :delete, class:"btn btn-danger m-50" %>
  </div>  </div>
</div>







